{
  "name": "verto",
  "version": "0.0.2",
  "description": "A multi-currency crypto wallet with initial support for EOS & VTX",
  "author": "Volentix Labs <volentix.io>",
  "main": "main.js",
  "repository": "https://github.com/Volentix/verto",
  "build": {
    "appId": "io.volentix.verto",
    "directories": {
      "buildResources": "static"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": [
        "zip",
        "dmg"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ]
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=DEV electron .",
    "start": "electron .",
    "build": "nuxt build && CSC_IDENTITY_AUTO_DISCOVERY=true electron-builder",
    "build:win": "nuxt build && CSC_IDENTITY_AUTO_DISCOVERY=true electron-builder --win",
    "build:linux": "nuxt build && CSC_IDENTITY_AUTO_DISCOVERY=true electron-builder --linux",
    "lint": "eslint --ext .js,.vue .",
    "lintfix": "eslint --fix --ext .js,.vue .",
    "precommit": "lint-staged",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest",
    "test:e2e": "mocha",
    "pack": "electron-packager . --overwrite --no-prune --out=bin",
    "build:dir": "nuxt build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "publish": "nuxt build && CSC_IDENTITY_AUTO_DISCOVERY=true electron-builder -p always"
  },
  "lint-staged": {
    "*.{js,vue,css}": [
      "npm run lintfix",
      "git add"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(vue-qr)/)"
    ],
    "testPathIgnorePatterns": [
      "e2e"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.3",
    "@fortawesome/free-solid-svg-icons": "^5.3.0",
    "@fortawesome/vue-fontawesome": "^0.1.1",
    "@nuxtjs/axios": "^5.3.1",
    "@nuxtjs/bulma": "^1.2.0",
    "ajv": "^6.5.3",
    "buefy": "^0.6.7",
    "dotenv": "^6.0.0",
    "electron-log": "^2.2.17",
    "electron-store": "^2.0.0",
    "electron-updater": "^3.1.2",
    "eosjs": "^16.0.8",
    "moment": "^2.22.2",
    "node-loader": "^0.6.0",
    "nuxt": "^1.4.0",
    "nuxt-fontawesome": "^0.3.0",
    "volentix-ledger": "^0.2.54",
    "vue": "^2.5.17",
    "vue-clipboard2": "^0.2.1",
    "vue-qr": "^1.3.8",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^23.6.0",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "electron": "^2.0.4",
    "electron-builder": "^20.8.1",
    "electron-devtools-installer": "^2.2.3",
    "electron-packager": "^12.1.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "prettier": "1.14.0",
    "sass-loader": "^7.1.0",
    "spectron": "^4.0.0",
    "vue-jest": "^2.6.0"
  }
}
