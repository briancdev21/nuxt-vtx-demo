{
  "name": "verto",
  "version": "1.0.0",
  "description": "A multi-currency crypto wallet with initial support for EOS & VTX",
  "author": "Shawn Lauzon <shawn@volentixlabs.com>",
  "private": true,
  "main": "main.js",
  "build": {
    "appId": "io.volentix.verto",
    "directories": {
      "buildResources": "static"
    }
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=DEV electron .",
    "build": "nuxt build && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "lint": "eslint --ext .js,.vue .",
    "lintfix": "eslint --fix --ext .js,.vue .",
    "precommit": "lint-staged",
    "test": "mocha"
  },
  "lint-staged": {
    "*.{js,vue,css}": [
      "npm run lintfix",
      "git add"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.3",
    "@fortawesome/free-solid-svg-icons": "^5.3.0",
    "@fortawesome/vue-fontawesome": "^0.1.1",
    "@nuxtjs/axios": "^5.3.1",
    "@nuxtjs/bulma": "^1.2.0",
    "ajv": "^6.5.3",
    "buefy": "^0.6.7",
    "electron-store": "^2.0.0",
    "keytar": "^4.2.1",
    "moment": "^2.22.2",
    "node-loader": "^0.6.0",
    "nuxt": "^1.4.0",
    "nuxt-fontawesome": "^0.3.0",
    "vue": "^2.5.17",
    "vue-clipboard2": "^0.2.1",
    "vue-qr": "^1.3.8"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "electron": "^2.0.0",
    "electron-builder": "^20.8.1",
    "electron-devtools-installer": "^2.2.3",
    "eslint": "^4.15.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "prettier": "1.14.0",
    "sass-loader": "^7.1.0",
    "spectron": "^4.0.0"
  }
}
